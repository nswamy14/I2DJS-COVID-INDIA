        "build-r": "vue-cli-service build --modern --report",
        "dev": "vue-cli-service serve"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "d3": "^5.12.0",
        "i2djs": "git+https://github.com/I2Djs/I2Djs.git",
